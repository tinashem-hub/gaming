{
    "family": "gaming-app-task",
    "containerDefinitions": [
      {
        "name": "gamers",
        "image": "nginx:latest",
        "memory": 512,         
        "essential": true,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80
          }
        ],
        "workingDirectory": "/usr/share/nginx/html",
        "mountPoints": [
          {
            "sourceVolume": "html-volume",
            "containerPath": "/usr/share/nginx/html",
            "readOnly": false
          }
        ],
        "command": ["nginx", "-g", "daemon off;"]
      }
    ],
    "volumes": [
      {
        "name": "html-volume",
        "host": {}
      }
    ]
  }
  
  